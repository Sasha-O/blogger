  <div id="post_show_content" class="skinny_wrapper wrapper_padding">
    <header>
      <p class="date"><%= @project.created_at.strftime("%A, %b %d %Y")%></p>
      <h1><%= @project.title %></h1>
      <hr>
    </header>
    <div id="content">
      <%= markdown @project.description %>   
      <div class="button_wrapper">
        <a href="<%= @project.link %>" class="project_button" target="_blank"> Visit <%= @project.title %></a>
      </div>   
    </div>

    <hr>

    <div id="share_box">
      <p>Share The Do List</p>
      <!-- Twitter -->
      <a onClick="javascript:window.open('http://twitter.com/share?text=<%= @project.title %> by @briansBier - &amp;url=<%= url_for([@project,{only_path: false}]) %>', '_blank','width=800,height=500,top=200,left=300');void(0);"><i class="fa fa-twitter"></i></a>
      <!-- Facebook -->
      <a onClick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@project,{only_path: false}]) %>', '_blank','width=800,height=500,top=200,left=300');void(0);"><i class="fa fa-facebook"></i></a>

      <!-- Google Plus -->
      <a onClick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@project,{only_path: false}]) %>', '_blank','width=800,height=500,top=200,left=300');void(0);"><i class="fa fa-google-plus"></i></a>
    </div>

    <hr>
</div>

<br>
<br>
    <%= link_to 'Edit', edit_project_path(@project) %>
    <%= link_to 'Delete', project_path(@project), method: :delete, data: {confirm: "Are you sure you want to delete this project"} %>