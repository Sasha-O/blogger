<div class="banner">
  <div id="particles-js">
    <h1 id="page_heading">Policy Insights</h1>
  </div>
</div>
<% if user_signed_in? %>
<div id="admin_links">
  <%= link_to "new Article", new_post_path %>
</div>
<% end %>
<div id="post_wrapper" class="skinny_wrapper wp2">
  <% @posts.each do |post| %>
  <%= link_to(post) do %>
    <div class="post">
      <h2><%= post.title %></h2>
      <p class="date"><%= post.created_at.strftime("%A, %b %d %Y")%></p>
      <hr>
    </div>
  <% end %>
  <% end %>
</div>

<%= will_paginate @posts %>