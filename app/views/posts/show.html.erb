<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @post.created_at.strftime("%A, %b %d %Y")%></p>
    <h1><%= @post.title %></h1>
    <hr>
  </header>
  <div id="content">
    <%= markdown @post.content %>      
  </div>
  <% if user_signed_in? %>
  <div id="admin_links">
    <%= link_to "edit Article", edit_post_path(@post) %>
    <%= link_to "delete Article", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
  </div>
  <% end %>
  <div id="share_box">
  <hr>
    <p>Share Article</p>
    <!-- Twitter -->
   <a class="twitter customer share" href="http://twitter.com/share?text=<%= @post.title %> by @SashaEconInc - &amp;url=http://www.sashaostojic.com/<%= url_for([@post]) %>" title="Twitter share" target="_blank"><i class="fa fa-twitter"></i></a>

    <!-- Facebook -->
    <a class="facebook customer share" href="http://www.facebook.com/sharer.php?u=<%= url_for([@post,{only_path: false}]) %>" title="Facebook share" target="_blank"><i class="fa fa-facebook"></i></a>

    <!-- Google Plus -->
    <a class="google_plus customer share" href="https://plus.google.com/share?url=<%= url_for([@post,{only_path: false}]) %>" title="Google Plus Share" target="_blank"><i class="fa fa-google-plus"></i></a>

    <!-- Linkedin -->
    <a class="linkedin customer share" href="http://www.linkedin.com/shareArticle?mini=true&url=<%= url_for([@post,{only_path: false}]) %>" title="linkedin Share" target="_blank"><i class="fa fa-linkedin"></i></a>
  </div>

  <hr>

  <%= render 'disqus' %>
</div>